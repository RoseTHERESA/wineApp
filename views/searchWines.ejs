<% include partials/header %>
<h2>Search For Wines!</h2>
<a id="newWinelink" href="wines/new">Search For Wines!</a>
<br>


  <form action="/searchWines" method="GET">
    <div class="form-group">
      <label for="varietal">Varietal:</label>
      <input type="text" name="varietal" id="varietal" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="vintage">Vintage:</label>
      <input type="number" name="vintage" id="vintage" class="form-control" required>
    </div>
    <div class="Winery">
      <label for="winery">Winery:</label>
      <input type="text" name="winery" id="winery" class="form-control" required>
    </div>
      <input type="submit" value="Add" class ="btn btn-success btn-lg">
    </div>
  </form>


  <% if(typeof wineData !== 'string' ) { %>
     <% wineData.forEach(function(wine){ %>
      <ul class="searchResults">
      <% if(wine.Labels){ %>	

	<div class="searchInfo" "container">
    	
    	<li class="column"><img class="labelImage" 
    	"column" src=<%= wine.Labels[0].Url%>></li>
      	<li class="fancyOne" "column"><a href="/wines/<%= wine.id%>"><%= wine.Name%></a></li>
      		<% if(wine.Vineyard){ %>
      	<li class="fancyTwo" "column"><b>Vineyard:</b> <%= wine.Vineyard.Name %></li>
      		<% }%>
     	 <% if(wine.Varietal){ %>
      	<li class="fancyThree" "column"><b>Varietal:</b> <%= wine.Varietal.Name %></li>
      		<% }%>
      <li class="fancyFour" "column"><b>Rating:</b> <%= wine.Ratings.HighestScore%></li>
      		<% }%>
 
      <li><a href="/wines/<%= wine.id%>/edit">Edit</a></li>
		
	</div>
	
    </ul>
    <% })%>
  <% } else { %>
	<%= wineData  %>
  <% }  %>

<% include partials/footer %>