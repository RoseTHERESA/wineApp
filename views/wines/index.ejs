<% include ../partials/header %>
<h1>Wines</h1>
<a href="/wines/new" id="newWineLink">Add Wines!</a>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Varietal</th>
      <th>Vintage</th>
      <th>Winery</th>
    </tr>
  </thead>
  <tbody>

    <% wines.forEach(function(wine){ %>
      <tr>
      <td><a href="/wines/<%= wine.id%>"><%= wine.varietal%></a></td>
      <td><%= wine.vintage%></td>
      <td><%= wine.winery%></td>
      <td><a href="/wines/<%= wine.id%>/edit">Edit</a></td>
      <td>
        <form action='/wines/<%= wine.id %>?_method=DELETE' method="POST">
          <input type="submit" value="X" class="btn btn-sm btn-danger">
        </form>
      </td>
    </tr>
    <% })%>
  </tbody>
</table>


<% include ../partials/footer %>